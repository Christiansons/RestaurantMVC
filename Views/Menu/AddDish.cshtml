@model DishViewModel

<h3>Add dish</h3>

<form method="post" asp-action="AddDish" asp-controller="Menu">
	<div class="form-group">
		<label asp-for=dishName>Dish name:</label>
		<input asp-for="dishName" class="form-control" />

		<label asp-for=priceInSek>Price:</label>
		<input asp-for="priceInSek" class="form-control" />

		<label asp-for="isAvailable" class="control-label">Is available: </label>
		<input asp-for="isAvailable" type="checkbox" />
		<span asp-validation-for="isAvailable" class="text-danger"></span>
	</div>

	<button type="submit" class="btn btn-control">Create</button>
</form>