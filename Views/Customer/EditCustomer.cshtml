@model CustomerVM

<h3>Edit customer</h3>

<form method="post" asp-action="EditCustomer" asp-controller="customer">
	<div class="form-group">
		<label asp-for=name>Customer name:</label>
		<input asp-for="name" class="form-control" />

		<label asp-for=phoneNr>Phone nr:</label>
		<input asp-for="phoneNr" class="form-control" />
	</div>

	<input type="hidden" asp-for="id" />

	<button type="submit" class="btn btn-control">Submit</button>
</form>